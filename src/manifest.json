{
  "name": "Pingu Nootifier",
  "description": "Providing subtle nootifications for your own betterment.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "resources/16.png",
    "32": "resources/32.png",
    "48": "resources/48.png",
    "128": "resources/128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage", "webRequest"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["resources/128.png", "resources/noot.mp3"],
      "matches": ["https://*/*", "file://*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "file://*"],
      "css": ["injected/styling.css"],
      "js": ["injected/script.js"],
      "run_at": "document_idle"
    }
  ]
}
